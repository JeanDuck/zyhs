<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="121dp"
        android:layout_height="552dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layoutcontrol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/metal"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="金属制品"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/plastic"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="塑料制品"
            android:textSize="20dp" />

        <Button
            android:id="@+id/paper"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="纸制品"
            android:textSize="20dp" />

        <Button
            android:id="@+id/oldbattery"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="废旧电池"
            android:textSize="20dp" />

        <Button
            android:id="@+id/homeappliance"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="家电回收"
            android:textSize="20dp" />

        <Button
            android:id="@+id/furniture"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="家具回收"
            android:textSize="20dp" />

        <Button
            android:id="@+id/drygoods"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#edefed"
            android:text="纺织品回收"
            android:textSize="20dp" />


    </LinearLayout>


                <ListView
                    android:id="@+id/showprice"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginLeft="150dp"
                    />


    <com.example.lhx.recovery.layoutcontrol
        android:id="@+id/layoutcontrol"
        android:layout_width="400dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></com.example.lhx.recovery.layoutcontrol>


</android.support.constraint.ConstraintLayout>
